# sed for json
brew 'jq'

# grep for ps
brew 'pgrep'

# The recommended way to use Heroku
brew 'heroku-toolbelt'

# Ruby version manager
brew 'rbenv'

# So `rbenv install` works
brew 'ruby-build'

# colorful diffs (alias diff='colordiff -u')
brew 'colordiff'

# a better ack/grep
brew 'the_silver_searcher'

# a terminal multiplexer
brew 'tmux'

# so copy/paste works in tmux
brew 'reattach-to-user-namespace'

# so :Rtags works
brew 'ctags'

# It's vim
brew 'mercurial'
brew 'vim'

# Manage rubies
brew 'rbenv'

# Install some gems (like bundler) for every new Ruby
brew 'rbenv-default-gems'

# Used in Rails projects
brew 'phantomjs'

# Syntax highlighting...for ZSH!
brew 'zsh-syntax-highlighting'

# Fast GitHub client
brew 'hub'

# Fuzzy finder
brew 'fzf'

# Lets us do `brew services restart postgres`, etc
tap 'homebrew/services'

# Cask: install binaries
tap 'caskroom/cask'
brew 'brew-cask'
cask 'alfred'
cask 'dropbox'
cask 'google-chrome'
cask 'netnewswire'
cask 'vlc'
# Use Cask so we get Cargo, too
cask 'rust'

# Docker
brew 'docker'
cask 'boot2docker'
