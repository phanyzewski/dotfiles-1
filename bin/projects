#!/bin/zsh

# List all directories in $CDPATH that contain git repositories.

cdpath_directories() {
  echo "${CDPATH//:/\n}" | while read dir; do
    find -L "$dir" \
      -not -path '*/\.*' \
      -type d \
      -maxdepth 1
  done
}

is_a_git_repo(){
  while read dir; do
    if [[ -d "$dir/.git" ]]; then
      basename "$dir"
    fi
  done
}

cdpath_directories | is_a_git_repo
